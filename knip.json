{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "src/app/**/*.{ts,tsx}",
    "src/components/**/*.{ts,tsx}",
    "e2e/**/*.spec.ts",
    "**/*.test.{ts,tsx}",
    "**/*.stories.{ts,tsx}"
  ],
  "project": ["src/**/*.{ts,tsx}"],
  "ignore": [
    "dist/**",
    "node_modules/**",
    ".next/**",
    "src-tauri/**",
    "storybook-static/**",
    "**/test-results/**",
    "**/playwright-report/**",
    "src/stories/**"
  ],
  "ignoreDependencies": [
    "conventional-changelog-conventionalcommits",
    "postcss",
    "tailwindcss",
    "tw-animate-css",
    "@tauri-apps/plugin-opener"
  ],
  "next": {
    "entry": ["next.config.ts"]
  },
  "vitest": {
    "entry": ["vitest.config.mts"]
  },
  "playwright": {
    "entry": ["playwright.config.ts", "e2e/**/*.spec.ts"]
  },
  "storybook": {
    "entry": [
      ".storybook/main.ts",
      ".storybook/preview.ts",
      "**/*.stories.{ts,tsx}"
    ]
  }
}
