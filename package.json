{
  "name": "timeline-studio-ai",
  "private": true,
  "version": "1.2.0",
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write",
    "fix": "biome check --write",
    "check:type": "tsc --noEmit",
    "fix:all": "bun run fix && bun run format && bun run check:type",
    "test": "vitest run",
    "test:watch": "vitest",
    "tauri": "tauri",
    "prepare": "lefthook install",
    "release": "semantic-release",
    "storybook": "NODE_OPTIONS='--localstorage-file=/tmp/storybook-localstorage' npx storybook dev -p 6006",
    "build-storybook": "NODE_OPTIONS='--localstorage-file=/tmp/storybook-localstorage' npx storybook build",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "bun run test && bun run test:e2e",
    "knip": "knip",
    "knip:production": "knip --production",
    "commit": "cz"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "*.css": [
      "biome format --write --no-errors-on-unmatched"
    ]
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tauri-apps/api": "^2.9.0",
    "@tauri-apps/plugin-opener": "^2.5.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.553.0",
    "next": "^16.0.3",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.66.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@chromatic-com/storybook": "^4.1.2",
    "@playwright/test": "^1.56.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@storybook/addon-a11y": "^10.0.7",
    "@storybook/addon-docs": "^10.0.7",
    "@storybook/addon-onboarding": "^10.0.7",
    "@storybook/addon-vitest": "^10.0.7",
    "@storybook/nextjs": "^10.0.7",
    "@storybook/react": "^10.0.7",
    "@storybook/test": "^8.6.14",
    "@tailwindcss/postcss": "^4.1.17",
    "@tauri-apps/cli": "^2.9.4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "commitizen": "^4.3.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "jsdom": "^27.2.0",
    "knip": "^5.69.1",
    "lefthook": "^2.0.4",
    "lint-staged": "^16.2.6",
    "semantic-release": "^25.0.2",
    "storybook": "^10.0.7",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.9"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
